<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">


    <View
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="220dp"
        android:background="@drawable/rectangle"
        android:visibility="visible"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:transitionName="example_transition"


        />



    <View
        android:id="@+id/rectangle_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:rotation="125"
        android:layout_marginTop="380dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/btnGetStarted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



    <TextView
        android:id="@+id/food_court"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:elevation="20dp"

        android:layout_marginTop="39dp"
        android:fontFamily="@font/inria_sans"
        android:text="Food Stand"
        android:textColor="#FF0000"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/LogoBurger" />



    <TextView
        android:id="@+id/powered_by_soe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:elevation="20dp"

        android:layout_marginTop="85dp"
        android:fontFamily="@font/inria_sans_light"
        android:text="powered by soe"
        android:textColor="#FF0000"

        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />


    <ImageView

        android:id="@+id/LogoBurger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="248dp"
        android:alpha="1"
        android:elevation="20dp"
        android:src="@drawable/logo_burger"

        android:transitionName="example_burger"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnGetStarted"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="18dp"

        android:background="@drawable/orange_button"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rectangle"
        app:layout_constraintBottom_toTopOf="@id/btnQuit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"




        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inria_sans_bold"
            android:textSize="32sp"
            android:gravity="center"
            android:text="Get Started"

            android:textColor="#ffffff" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnQuit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="55dp"

        android:background="@drawable/orange_button_cancel"
        android:elevation="20dp"

        app:layout_constraintTop_toBottomOf="@+id/btnGetStarted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"




        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inria_sans_bold"
            android:textSize="32sp"
            android:gravity="center"
            android:text="Quit"


            android:textColor="#6C6868" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>